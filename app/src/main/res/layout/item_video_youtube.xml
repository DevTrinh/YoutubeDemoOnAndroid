<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cl_item_video"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_thumbnail_youtube"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        android:src="@drawable/iv_ytb_demo"/>

    <TextView
        android:id="@+id/tv_title_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_thumbnail_youtube"
        app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail_youtube"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.57"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintHeight_max="35dp"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="bolbbalgan4 - to my youth [slowed + reverb]"/>

    <TextView
        android:id="@+id/tv_title_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_video"
        app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail_youtube"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail_youtube"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        android:text="ahahihiih"/>


</androidx.constraintlayout.widget.ConstraintLayout>